<testcase xmlns="tag:dmaus@dmaus.name,2019:Schematron:Testsuite" id="rule-context-attribute" expectValid="false" >
  <label>Context node is an attribute node</label>
  <reference>ISO Schematron 2016: Annex C clause 2 (xslt), Annex H clause 2 (xslt2), Annex I clause 2 (xpath2)</reference>
  <documents>
    <document id="primary" filename="document.xml">
      <element attribute="value"/>
    </document>
  </documents>
  <schemas document="primary">
    <sch:schema xmlns:sch="http://purl.oclc.org/dsdl/schematron">
      <sch:pattern>
        <sch:rule context="@attribute">
          <sch:assert test="false()"/>
        </sch:rule>
      </sch:pattern>
    </sch:schema>
  </schemas>
</testcase>
